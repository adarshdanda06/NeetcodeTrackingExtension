{
    "manifest_version": 3,
    "name": "Neetcode Tracking Extension",
    "version": "1.0.0",
    "description": "A Chrome extension to track and write data to GitHub repository",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://api.github.com/*"
    ],
    "content_scripts": [
        {
          "matches": ["https://neetcode.io/*"],
          "js": ["config.js", "content-script.js"]
        }
    ],
    "web_accessible_resources": [
      {
        "resources": ["config.js"],
        "matches": ["https://neetcode.io/*"]
      }
    ]
}