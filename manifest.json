{
    "manifest_version": 3,
    "name": "Neetcode Tracking Extension",
    "version": "1.0.0",
    "description": "A Chrome extension to track and write data to GitHub repository",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "webRequest"
    ],
    "host_permissions": [
      "https://api.github.com/*",
      "<all_urls>"
    ],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content-script.js", "config.js"],
          "run_at": "document_start",
          "all_frames": true
        }
    ],
    "web_accessible_resources": [
      {
        "resources": ["config.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
}